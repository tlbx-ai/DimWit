{
    "manifest_version": 3,
    "name": "Dim Mode on X & Grokipedia",
    "version": "1.1.0",
    "description": "Brings back the Dim dark mode (#15202B) on X and Grokipedia by replacing the Lights Out black theme.",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.x.com/*",
                "*://*.twitter.com/*",
                "*://*.grokipedia.com/*"
            ],
            "css": ["content.css"],
            "js": ["content.js"],
            "run_at": "document_start"
        }
    ]
}
